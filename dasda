#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>

int main(void) {
	
	setlocale(LC_ALL, "Portuguese");
	
	char nome [15];
	char sobrenome [15];
	char curso[30];
	
	printf("Digite Seu Nome:");
	fgets(nome, 15, stdin);
	fflush(stdin);
	
	printf("Digite Seu Sobrenome:");
	fgets(sobrenome, 15, stdin);
	fflush(stdin);
	
	printf("Digite Seu Curso:");
	fgets(curso, 30, stdin);
	fflush(stdin);
	
	printf("%s %s est√° cursando %s.", nome, sobrenome, curso);	

	return 0;
}
